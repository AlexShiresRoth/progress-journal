<% include partials/header %>

<div class="create__todo">
	<form class="create__todo--form" action="/api/todos?_method=PUT" method="POST">
		<div class="create__todo--form--row">
			<input name="todo[title]" type="text" placeholder="Enter a title" />
		</div>

		<div class="create__todo--form--row">
			<input name="todo[startDate]" type="date" placeholder="Enter start time" />
		</div>

		<div class="create__todo--form--row">
			<input name="todo[endDate]" type="date" placeholder="Enter completion date" />
		</div>
		<button>Create Todo</button>
	</form>
</div>

<% include partials/footer %>
