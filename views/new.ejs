<% include partials/header %>

<form action="/api/days" method="post" class="form">
	<div class="form-header">
		<h1>New Journal Entry</h1>
		<div class="line"></div>
	</div>
	<div class="input-container">
		<div class="input-div">
			<label for="title">Please Give this Post a Title.</label>
			<input
				type="text"
				class="title"
				name="day[title]"
				placeholder="Running in the forest"
				maxlength="20"
				required
			/>
		</div>
		<div class="input-div">
			<label for="mood">How Would You Rate Your Day?</label>
			<select name="day[mood]" class="mood" required>
				<option value="5">Great!</option>
				<option value="4">Good</option>
				<option value="3">Pretty Good</option>
				<option value="2">Eh</option>
				<option value="1">Not Great</option>
				<option value="0">Bad</option>
			</select>
		</div>
		<div class="input-div">
			<label for="body"
				>Describe your day in atleast 200 characters...(Currently:<span class="char-display red">0</span
				>)</label
			>
			<textarea
				type="text"
				name="day[text]"
				class="body"
				minlength="200"
				maxlength="350"
				id="day-text"
				required
			></textarea>
		</div>
		<div class="custom-hr">
			<div class="line"></div>
			<div class="inter">&</div>
			<div class="line"></div>
		</div>
		<button class="full-btn">Submit</button>
	</div>
</form>

<% include partials/footer %>
