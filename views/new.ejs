<% include partials/header %>

<form action="/api/days/" method="POST" class="edit__post">
	<div class="edit__post--box">
		<h3>New Post</h3>
	</div>
	<div class="edit__post--description">
		<div class="edit__post--description--header">
			<h3>Author:<%= currentUser %></h3>
			<div class="edit__post--description--header--user">
				<h3><a>Today:<%= currentDay %></a></h3>
			</div>
		</div>
		<div class="edit__post--description--text">
			<div class="edit__post--description--text--input">
				<label>Edit Post Title.</label>
				<input name="day[title]" class="title" maxlength="25" placeholder="Ex. Got A Sick New Car" required />
			</div>
			<div class="edit__post--description--text--input">
				<label for="mood">How do you feel?</label>
				<select name="day[mood]" class="mood" required>
					<option value="5">Great!</option>
					<option value="4">Good</option>
					<option value="3">Pretty Good</option>
					<option value="2">Eh</option>
					<option value="1">Not Great</option>
					<option value="0">Bad</option>
				</select>
			</div>
			<div class="edit__post--description--text--content">
				<label for="text"
					>Describe your day in at most 200 characters...(Currently:<span class="char-display red">0</span
					>)</label
				>
				<textarea
					type="text"
					name="day[text]"
					class="body"
					maxlength="200"
					minlength="50"
					rows="5"
					id="day-text"
					placeholder="Ex. The car is siiiiiiiiick"
					required
				></textarea>
			</div>
		</div>
		<div class="edit__post--description--show-buttons">
			<button class="full-btn">Submit New Post</button>
		</div>
	</div>
</form>

<% include partials/footer %>
