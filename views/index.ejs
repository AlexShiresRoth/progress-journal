<% include partials/header %>

           <% if(error && error.length > 0){ %>
                <div class="error"><%= error %></div>
            <% } %>
            <% if(success && success.length > 0) { %>
                <div class="success"><%= success %></div>
            <% } %>
            
        <% if(noPosts === 0) { %>
            <h1 style="color:#666">No Posts just Yet!</h1>
            <% } %>
        <% days.forEach((day) => { %>
        
          <div class="post">
            <div class="post-img">
              <% if(day.mood == 5 ) {  %>   <i class="fa fa-smile-o green large"></i> <% } %>
              <% if(day.mood == 4 ) {  %>   <i class="fa fa-smile-o green large"></i> <% } %>
              <% if(day.mood == 3 ) {  %>   <i class="fa fa-smile-o green large"></i> <% } %>
              <% if(day.mood == 2 ) {  %>   <i class="fa fa-meh-o orange large"></i>  <% } %>
              <% if(day.mood == 1 ) {  %>   <i class="fa fa-frown-o orange large"></i>  <% } %>
              <% if(day.mood == 0 ) {  %>   <i class="fa fa-frown-o red large"></i>   <% } %>
            </div>
          <div class="post__description">
            <div class="post__description--header">
               <div class="post__description--header--user">
                  <i class="fa fa-user"></i>
                <a href="/api/days/<%=day.id %>"><h3><%= day.author.username %>: <%= day.title %> </h3> </a>
               </div>
              <h3><a href="/api/days/<%=day.id%>">Posted:<%= day.date %></a></h3>
            </div>
               <div class="post__description--text">
                <div class="post__description--text--rating">     
                  <% if(day.mood == 5 ) { %> <h4>Day Rating: <span class="day-rating green">Great!      </span></h4> <% } %>
                  <% if(day.mood == 4 ) { %> <h4>Day Rating: <span class="day-rating green">Good        </span></h4> <% } %>
                  <% if(day.mood == 3 ) { %> <h4>Day Rating: <span class="day-rating green">Pretty Good </span></h4> <% } %>
                  <% if(day.mood == 2 ) { %> <h4>Day Rating: <span class="day-rating orange">Eh         </span></h4> <% } %>
                  <% if(day.mood == 1 ) { %> <h4>Day Rating: <span class="day-rating orange">Not Great  </span></h4> <% } %>
                  <% if(day.mood == 0 ) { %> <h4>Day Rating: <span class="day-rating red">Bad!          </span></h4> <% } %>
                </div> 
                <div class="post__description--text--content">
                    <p><%= day.text.substring(0,70) %>...</p>
                </div> 
               </div>
              </div>
            </div>
        <% }); %>
        
      </div>
      
<% include partials/footer %>
  