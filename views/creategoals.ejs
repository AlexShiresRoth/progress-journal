<% include partials/header %>

<div class="create__todo">
	<form class="create__todo--form" action="/api/goals?_method=PUT" method="POST">
		<div class="create__todo--form--row">
			<input name="goals[title]" type="text" placeholder="Enter a title" />
		</div>

		<div class="create__todo--form--row">
			<input name="goals[startDate]" type="date" placeholder="Enter start time" />
		</div>

		<div class="create__todo--form--row">
			<input name="goals[endDate]" type="date" placeholder="Enter completion date" />
        </div>
        <div class="create__todo--form--row">
                <input name="goals[details]" type="text" placeholder="Enter details" />
        </div>
		<button>Add Goal</button>
	</form>
</div>

<a href="/api/goals/<%=user._id%>/goals"><button class="profile-button">Go Back</button></a>

<% include partials/footer %>
